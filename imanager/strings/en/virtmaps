$VIRTMAPS_NO_MAPPINGS_EXIST = 
  "It appears that your virtmap file does not include any virtual
   address mappings.  Please use the 'Add Virtmap' utility to add new
   virtual address mappings.";

$VIRTMAPS_SELECT_TITLE = "Select Virtmaps";
$VIRTMAPS_SELECT_HELP = 
  "Please use the following form to select one or more virtmaps.";

$VIRTMAPS_OVERVIEW_HELP_TEXT = 
  "Specify a Virtual E-mail Address (on the left) which points to a Real 
   E-mail Address (on the right).  The virtual e-mail address can be a full
   e-mail address (user\@domain.name) or simply a hostname (domain.name).
   If you designate a hostname then e-mail sent to that hostname will be
   sent to the corresponding real e-mail address that you specify if none 
   of the previous virtual address mappings for that domain name match.  
   This is useful as a 'catch-all' for e-mail sent to any address for a
   given hostname.";

$VIRTMAPS_EXAMPLES_HELP_TEXT_1 = "Consider the following examples:";
$VIRTMAPS_EXAMPLES_HELP_TEXT_2 = 
  "  Virtual E-mail Address                Real E-mail Address
  ----------------------                ------------------
  webmaster\@virtualhost1.com            user\@mail.dialup.com
  user\@virtualhost1.com                 localuser1
  virtualhost1.com                      user\@isp.com
  # Note: \"Unknown User\" mail to virtualhost1.com goes to user\@isp.com
 
  webmaster\@virtualhost2.com            localuser2
  user\@virtualhost2.com                 someuser\@aol.com
  foobar\@virtualhost2.com               anotheruser\@hotmail.com
  virtualhost2.com                      localuser2";

$VIRTMAPS_EXAMPLES_HELP_TEXT_2_DEDICATED = 
  "  Virtual E-mail Address                Real E-mail Address
  ----------------------                ------------------
  webmaster\@virtualhost1.com            user\@mail.dialup.com
  user\@virtualhost1.com                 localuser1
  \@virtualhost1.com                     user\@isp.com
  # Note: \"Unknown User\" mail to virtualhost1.com goes to user\@isp.com
 
  webmaster\@virtualhost2.com            localuser2
  user\@virtualhost2.com                 someuser\@aol.com
  foobar\@virtualhost2.com               anotheruser\@hotmail.com
  \@virtualhost2.com                     localuser2";

$VIRTMAPS_VIRTUAL_EMAIL_ADDRESS = "Virtual E-mail Address";
$VIRTMAPS_REAL_EMAIL_ADDRESS = "Real E-mail Address";

