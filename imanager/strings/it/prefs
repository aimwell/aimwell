##############################################################################
# security preferences      
  
$PREFS_SECURITY_TEXT = "Preferenze Sicurezza";

$PREFS_SECURITY_FORCE_HTTPS_TEXT = "Forza un collegamento sicuro";
$PREFS_SECURITY_FORCE_HTTPS_HELP =
  "Puoi forzare tutte le richieste non cifrate (non-SSL) 
   orientandole ad una sessione SSL-cifrata. Naturalmente, forzare
   questo  richiede che tu abbia SSL installato
   sul tuo Virtual Server. Di default le sessioni non-SSL sono
   permesse.";
$PREFS_SECURITY_FORCE_HTTPS_YES = "Forza Collegamenti SSL";
$PREFS_SECURITY_FORCE_HTTPS_NO = "Permetti Collegamenti non-SSL";

$PREFS_SECURITY_IP_CHECK_TEXT =
  "Richiedi L'Autenticazione Hostname (Controllo IP)";
$PREFS_SECURITY_IP_CHECK_HELP =
  "Una degli handshake di autenticazione effettuati è il  confronto
   degli hostname (o degli indirizzi IP) con le sessioni successive.  Questo
   confronto impedisce un accesso non autorizzato usanda la tua chiave di
   autenticazione a qualunque macchina tranne a quella a cui la sessione ha
   avuto iniziato.  Tuttavia, alcuni utenti possono collegarsi ad Internet tramite un
   proxy con hostname (o Indirizzo IP) dinamico per ogni sessione
   Di default, l'autenticazione del hostname (Controllo IP) è sempre eseguita.";
$PREFS_SECURITY_IP_CHECK_YES = "Controlla IP";
$PREFS_SECURITY_IP_CHECK_NO = "Non Controllare IP";

