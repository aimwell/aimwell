$AUTH_TITLE = "Autenticação Necessária";

$AUTH_LOGINID    = "Login ID";
$AUTH_PASSWORD = "Password";

$AUTH_SETCOOKIE = "Lembrar Password";
$AUTH_SETCOOKIE_HELP_TEXT = 
  "O recurso de memorização de senhas, quando seleccionado, activa um
   mecanismo no servidor que envia ao seu navegador os dados de
   autenticação e solicita que os mesmos sejam armazenados temporariamente.
   Os dados, ou 'cookies' (como são vulgarmente conhecidos), são reenviados
   ao servidor pelo navegador em cada solicitação subsequente.
   Esse método de troca de dados não é invulgar e é preferido sobre
   o normal, que seria passar os dados de autenticação em elementos ocultos 
   do formulário ou totalmente a visíveis como
   argumentos de URLs."; 

$AUTH_UNKNOWNLOGIN = "O Login ID não é conhecido.";
$AUTH_BADPASSWORD = "A Password não está correta.";
$AUTH_LOGGEDOUT = "Você saiu do $SOFTWARE_TITLE.";
$AUTH_BADHOST = 
  "O nome do host 'hostname' autorizado mudou.  Por favor identifique-se novamente.";
$AUTH_EXPIRED = 
  "As suas credenciais de autenticação expiraram.  Por favor identifique-se novamente.";

