# mail manager preferences

#
# name...........: mail__num_messages
# description....: when viewing a folder, number of messages to see at once
# possible values: any integer value
# default value..: 25
#
mail__num_messages:25

#
# name...........: mail__inbox_refresh_rate
# description....: when viewing the inbox, the reload page refresh rate 
#                  (specified in seconds)
# possible values: positive integer greater than 15
# default value..: 180
#
mail__inbox_refresh_rate:180

#
# name...........: mail__sort_option
# description....: when viewing a folder, default sort option
# possible values: by_date, by_size, by_sender, by_subject, by_thread, in_order
# default value..: by_date
# note...........: in_order is the least memory intensive
#
mail__sort_option:by_date

#
# name...........: mail__confirm_message_remove
# description....: prompt to confirm that messages should be removed
# possible values: yes, no
# default value..: yes
#
mail__confirm_message_remove:yes

#
# name...........: mail__default_folder
# description....: directory where copy of outgoing mail is stored
# possible values: any valid directory
# default value..: ~/Mail
#
mail__default_folder:~/Mail

#
# name...........: mail__upload_attach_elements
# description....: number of upload file as attachment elements in compose
#                  message form
# possible values: any integer value
# default value..: 2
#
mail__upload_attach_elements:2

#
# name...........: mail__local_attach_elements
# description....: number of local file attachement elements in compose
#                  message form (only applicable if user has FTP privs)
# possible values: any integer value
# default value..: 2
#
mail__local_attach_elements:2

#
# name...........: mail__address_book_confirm_changes
# description....: prompt to confirm any address book changes
# possible values: yes, no
# default value..: yes
#
mail__address_book_confirm_changes:yes

#
# name...........: mail__address_book_elements
# description....: number of address book elements in add/edit address book
#                  contact form
# possible values: any integer value
# default value..: 8
#
mail__address_book_elements:8

#
# name...........: mail__signature_automatic_append
# description....: automatically append signature into outgoing messages
# possible values: yes, no
# default value..: yes
#
mail__signature_automatic_append:yes

